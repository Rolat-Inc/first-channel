        id="DataUserScreen"
        visible="false">

        <Label
            id="userDataName"
            height="70"
            color="0xEB455F"
            translation="[280,150]" 
            font="font:LargeBoldSystemFont" />

        <LayoutGroup
            layoutDirection="vert"
            vertAlignment="center"
            horizAlignment= "center"
            itemSpacings="[50]"
            translation="[1000,550]" >

            <Poster
                id="posterDataUser"
                uri=""
                width="580"
                height="450">
            </Poster>        

            <Label
                id="TeamsData"
                height="0"
                width="920"
                numLines="4"
                lineSpacing="10"
                color="0x2B3467"
                wrap="true"
                horizAlign = "center"
                vertAlign = "center"
                font = "font:LargeBoldSystemFont" />

            <Label
                text="PRESS BACK TO RETURN"
                font="font:SmallestSystemFont"
                height="10"
                color="0xEB455F"/>
       
        </LayoutGroup>      
    </Group>    
    </children>
</component>

