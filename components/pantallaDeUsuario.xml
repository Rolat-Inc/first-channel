    <script type="text/brightscript" uri="pantallaDeUsuario.brs" /> 

    <children>
        <Poster
            id="posterFirst"
            translation="[9,-53]"
            height="220"
            width="270" 
            uri="pkg:/images/firstScenelogo.png" 
            visible="false"/>  
        <Label
            id="msWelcome"
            height="50"
            color="0xEB455F"
            text="Chose your favorite NBA team to know its information:"
            translation="[350,200]" 
            font = "font:LargeBoldSystemFont"/>
        <CustomizedRowlist
            id="usersProfiles"
            itemComponentName = "usersItemComponent"
            itemSize="[1650, 450]"
            numRows="1"
            rowItemSize="[[380,250]]"
            rowItemSpacing="[[40,0]]"
            translation="[160,400]" 
