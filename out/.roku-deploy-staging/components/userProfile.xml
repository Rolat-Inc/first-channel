<?xml version="1.0" encoding="utf-8" ?>

<component name="UserProfile" extends="Group" >

    <interface>
        <field id="locateImage" type="string" alias="userImage.uri" />   
        <field id="colorUser" type="string" alias="userImage.opacity" />
        <field id="profileName" type="string" alias="userName.text" />
        <field id="pencilHasFocus" type="boolean"/>
    </interface>

    <script type="text/brightscript" uri="userProfile.brs" /> 

    <children>  
    <LayoutGroup
        id="userProfileItem"
        translation="[310, 400]"
        layoutDirection="vert"
        horizAlignment="center"
        itemSpacings="[30]"
        visible="true">
        <Rectangle
            id="userSelection"
            color="0xFFFAE7"
            width="0"
            height="0"
            opacity="0.3">
        <Poster
            id="userImage"
            width="309"
            height="249"
            visible="true"
            translation ="[3,2]"/>                           
    </Rectangle>
        
        <Label 
            id="userName"
            height="30"
            opacity="0.3"
            color="0x7D9D9C" 
            visible="true">
            <Poster  
                id="editUser"
                uri="pkg:/images/chooseProfile.jpg"
                opacity="0.3"
                visible="true"
                translation="[38,140]"/>   
        </Label>  
    </LayoutGroup>
    </children>
</component>